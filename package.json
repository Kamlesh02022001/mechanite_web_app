{
  "private": true,
  "name": "my-nextron-app",
  "description": "My application description",
  "version": "1.0.0",
  "author": "Yoshihide Shiono <shiono.yoshihide@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "file-saver": "^2.0.5",
    "jwt-decode": "^4.0.0",
    "nodemailer": "^6.10.0",
    "papaparse": "^5.5.1",
    "react-icons": "^5.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "next": "^14.2.20",
    "nextron": "^9.4.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "My Nextron App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "renderer/**/*",
      "resources/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}